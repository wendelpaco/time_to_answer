<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Assuntos/Áreas</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Assuntos/Áreas</th>
        <th class="text-center">
          <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
      <tr class="text-center">
        <td><%= subject.id %></td>
        <td><%= subject.description %></td>
        <td style="width: 100px;">
          <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
          <% end %>

          <%= link_to admins_backoffice_subject_path(subject), class: "btn btn-danger btn-circle", method: :delete, data: { confirm: 'Tem certeza?'} do %>
          <i class="fa fa-minus"></i>
          <% end %>

        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @subjects%>
  </div>
</div>