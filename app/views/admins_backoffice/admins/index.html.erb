<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @admins.model_name.human(count: 2)) %></h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= translate_attribute(@admins, :id) %></th>
        <th><%= translate_attribute(@admins, :email) %></th>
        <th class="text-center">
          <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
          <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
      <tr class="text-center">
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td style="width: 100px;">
          <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
          <i class="fa fa-edit"></i>
          <% end %>

          <%= link_to admins_backoffice_admin_path(admin), 
                                          class: "btn btn-danger btn-circle", 
                                          method: :delete, 
                                          data: { confirm: t('messages.confirm_with', item: admin.email.truncate(50))} do %>
          <i class="fa fa-minus"></i>
          <% end %>

        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @admins%>
  </div>
</div>