<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastra-se</h1>

          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password, placeholder:"Password", required: true, class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o da senha", required: true, class:"form-control" %>
          </div>

          <div class="user_submit">
            <%= f.submit "Cadastra-se", class:"btn btn-default submit" %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>